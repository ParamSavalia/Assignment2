@model IEnumerable<Lab4.Models.Advertisement>
@using Lab4.Models;

@{
    ViewData["Title"] = "Index";
    Community community = ViewBag.Community;
}
<link rel="stylesheet" href="~/StyleSheet.css" />
<link rel="stylesheet" href="~/bootstrap.min.css" />

<h1>Show ads for community @Html.DisplayFor(model => community.Title)</h1>




<div>
    <a asp-action="Create" asp-route-id="@community.Id">Upload New</a>
</div>
<div>
          <a asp-controller="Communities" asp-action="Index" asp-route-id="@community.Id">Back to List</a>
</div>  
     
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FileName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Url)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FileName)
                    </td>
                    <td>
                        <img src="@item.Url" style="max-width: 400px;" />
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
